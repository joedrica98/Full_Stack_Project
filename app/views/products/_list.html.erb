<div class="container">
  <% @products.each do |product| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to product.name, product_path(product), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(product.stores.count, "store") %></p>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(product.created_at) %> ago,
              edited <%= time_ago_in_words(product.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>